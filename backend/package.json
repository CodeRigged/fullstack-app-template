{
  "author": "https://github.com/CodeRigged",
  "dependencies": {
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "4.19.2",
    "joi": "18.0.2",
    "mongodb": "6.5.0",
    "mongoose": "8.3.5",
    "pino": "10.3.1",
    "pino-http": "11.0.0",
    "shared": "workspace:*",
    "swagger-autogen": "2.23.7",
    "swagger-ui-express": "5.0.1"
  },
  "description": "A simple todo list REST API",
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "pino-pretty": "13.1.3",
    "supertest": "7.2.2",
    "tsup": "8.0.0",
    "tsx": "4.21.0"
  },
  "keywords": [
    "express",
    "typescript",
    "template",
    "backend",
    "mongoose",
    "testing",
    "logging"
  ],
  "license": "MIT",
  "main": "dist/server.js",
  "name": "express-ts-template",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "predev": "pnpm swagger",
    "dev": "tsx --watch src/server.ts",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:autofix": "eslint . --ext ts --fix --report-unused-disable-directives --max-warnings 0",
    "prestart": "pnpm swagger && pnpm build",
    "start": "node dist/server.js",
    "test": "vitest",
    "swagger": "tsx swagger.ts"
  },
  "type": "module",
  "version": "1.0.0"
}
